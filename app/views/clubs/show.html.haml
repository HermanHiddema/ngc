%h1 #{@club.name} (#{@club.abbrev})

= markdown @club.info || ''

- if current_user
	= link_to 'Bewerken', edit_club_path(@club), class: :button

%h3 Teams
%table
	%tr
		%th{colspan:2} Naam
		%th{colspan:2} Klasse
		%th{colspan:3} Bord 1
		%th{colspan:3} Bord 2
		%th{colspan:3} Bord 3

	- @teams.each do |team|
		%tr
			%td{colspan:2}= link_to team.name, team
			%td{colspan:2}= team.league.name
			%td{colspan:3}= team.team_members.first.name
			%td{colspan:3}= team.team_members.second.name
			%td{colspan:3}= team.team_members.third.name

%h3 Wedstrijden
%table
	%tr
		%th Datum/tijd
		%th Speellokatie
		%th Zwart
		%th Wit
		%th Resultaat
	= render Match.where('black_team_id in (?) OR white_team_id in (?)', @teams.pluck(:id), @teams.pluck(:id)).order(:playing_date, :playing_time)

%h3 Spelers
= render 'participants/list'

